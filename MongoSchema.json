                "primary": true,
                "description": "Unique identifier for the coach document."
            },
            "COACH_ID": {
                "type": "String",
                "required": true,
                "unique": true,
                "description": "Unique coach identifier."
            },
            "NAME": {
                "type": "String",
                "required": true
            },
            "EMAIL": {
                "type": "String",
                "required": true,
                "unique": true
            },
            "CREATED_AT": {
                "type": "Date",
                "required": true,
                "description": "Document creation timestamp."
            },
            "UPDATED_AT": {
                "type": "Date",
                "required": false,
                "description": "Document last update timestamp."
            }
        },
        "indexes": [
            {
                "fields": [
                    "EMAIL"
                ],
                "unique": true
            },
            {
                "fields": [
                    "COACH_ID"
                ],
                "unique": true
            }
        ]
    },
