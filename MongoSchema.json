                        }
                    }
                }
            },
            "CREATED_AT": {
                "type": "Date",
                "required": true,
                "description": "Document creation timestamp."
            },
            "UPDATED_AT": {
                "type": "Date",
                "required": false,
                "description": "Document last update timestamp."
            }
        },
        "indexes": [
            {
                "fields": [
                    "USER_ID"
                ],
                "unique": false
            }
        ]
    },
    "CHAT_INTERACTION": {
        "type": "Collection",
        "fields": {
            "_id": {
                "type": "ObjectId",
                "required": true,
                "primary": true,
                "description": "Unique identifier for the chat interaction document."
            },
            "CHAT_ID": {
                "type": "String",
                "required": true,
                "unique": true,
                "description": "Unique identifier for the chat session."
            },
            "USER_ID": {
                "type": "ObjectId",
                "required": true,
                "description": "Reference to the USER_PROFILE _id."
            },
            "COACH_ID": {
                "type": "ObjectId",
                "required": true,
                "description": "Reference to the COACHES _id."
            },
            "MESSAGES": {
                "type": "Array",
                "required": true,
                "items": {
                    "type": "Object",
                    "fields": {
                        "MESSAGE": {
                            "type": "String",
                            "required": true
                        },
                        "TIMESTAMP": {
                            "type": "Date",
                            "required": true
                        },
                        "ROLE": {
                            "type": "String",
                            "required": true,
                            "description": "Sender's role (e.g., USER, COACH)."
                        }
                    }
                }
            },
            "CREATED_AT": {
                "type": "Date",
                "required": true,
                "description": "Document creation timestamp."
            },
            "UPDATED_AT": {
                "type": "Date",
                "required": false,
                "description": "Document last update timestamp."
            }
        },
        "indexes": [
            {
                "fields": [
                    "CHAT_ID"
                ],
                "unique": true
            },
            {
                "fields": [
                    "USER_ID"
                ]
            },
            {
                "fields": [
                    "COACH_ID"
                ]
            }
        ]
    }
