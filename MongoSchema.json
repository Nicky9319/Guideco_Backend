    "PAYMENT": {
        "type": "Collection",
        "fields": {
            "_id": {
                "type": "ObjectId",
                "required": true,
                "primary": true,
                "description": "Unique identifier for the payment document."
            },
            "USER_ID": {
                "type": "ObjectId",
                "required": true,
                "description": "Reference to the USER_PROFILE _id."
            },
            "CREDIT_CARDS": {
                "type": "Array",
                "items": {
                    "type": "Object",
                    "fields": {
                        "CARD_NUMBER": {
                            "type": "String",
                            "required": true
                        },
                        "EXPIRY_DATE": {
                            "type": "String",
                            "required": true
                        },
                        "CARDHOLDER_NAME": {
                            "type": "String",
                            "required": true
                        },
                        "CARD_TYPE": {
                            "type": "String",
                            "required": false,
                            "description": "Type of credit card (e.g., VISA, MASTERCARD)."
                        }
                    }
                }
            },
            "DEBIT_CARDS": {
                "type": "Array",
                "items": {
                    "type": "Object",
                    "fields": {
                        "CARD_NUMBER": {
                            "type": "String",
                            "required": true
                        },
                        "EXPIRY_DATE": {
                            "type": "String",
                            "required": true
                        },
                        "CARDHOLDER_NAME": {
                            "type": "String",
                            "required": true
                        },
                        "CARD_TYPE": {
                            "type": "String",
                            "required": false,
